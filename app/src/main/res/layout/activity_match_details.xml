<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    android:id="@+id/detailMatch"
    tools:context="com.example.home.bt_worldcup.activities.MatchDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:id="@+id/backgroundDetailMatch">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDetailMatch"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/myToolbarTheme" >
            <TextView
                android:id="@+id/detailPlace"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="FIFA WORLD CUP\nKaliningrad Kaliningrad Stadium"/>
        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/layout_detail_match"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detailImgHome"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mexico" />

                <TextView
                    android:id="@+id/detailHomeTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mexico"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detailResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="1 - 0"
                    android:textColor="#ffffff"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailDateMatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="29.06.2018"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailStage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Group A"
                    android:textColor="#cec7c6"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detailImgAway"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/mexico" />

                <TextView
                    android:id="@+id/detailAwayTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mexico"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
           

        </LinearLayout>

        <TextView
            android:id="@+id/detailMatchPen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Russia win on pennalties (3 - 2)"
            android:textColor="#ffffff"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_detail_match"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            app:tabIndicatorColor="#ffffff"
            app:tabSelectedTextColor="#ffffff"
            app:tabTextColor="#e7e0e0">

        </android.support.design.widget.TabLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_detail_match"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

    </android.support.v4.view.ViewPager>


</LinearLayout>
