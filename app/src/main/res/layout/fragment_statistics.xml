<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/statistics"
    tools:context="com.example.home.bt_worldcup.fragments.StatisticsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ball possession"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#3032ff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="11"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_item_livescore">
        <TextView
            android:id="@+id/ballpossessionHome"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="61"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechartBall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >

        </com.github.mikephil.charting.charts.PieChart>
        <TextView
            android:id="@+id/ballpossessionAway"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:layout_marginRight="10dp"
            android:text="49"
            android:textStyle="bold"
            android:textSize="22sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disciplinary"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#3032ff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="11">
            <TextView
                android:id="@+id/foulshome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="left|center"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="Fouls Committed"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/foulsaway"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="16"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="right|center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="11">

            <TextView
                android:id="@+id/yellohome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:gravity="left|center"
                android:text="7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:src="@drawable/yellowcard" />


            <TextView
                android:id="@+id/yelloaway"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:gravity="right|center"
                android:text="16"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="11">
            <TextView
                android:id="@+id/redhome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="left|center"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/red_card" />
            <TextView
                android:id="@+id/redaway"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="16"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="right|center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
