<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="61'"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="6"
            android:gravity="center|left"
            android:text="Yellow card"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/eventCountry"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="3"
            android:scaleType="centerInside"
            android:src="@drawable/russia" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="12">

        <ImageView
            android:id="@+id/eventImg"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/yellowcard" />

        <TextView
            android:id="@+id/eventPlayer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="6"
            android:gravity="center|left"
            android:text="KUTEPOV"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/eventGoal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="6"
            android:gravity="center|left"
            android:text="Russia have a player yellow carded"
            android:textColor="#9f9b9b"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>